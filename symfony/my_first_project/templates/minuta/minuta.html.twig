{% extends 'layout/layoutBaseConsulta.html.twig' %}

{% block tituloPagina %} 
	{{title}}
{% endblock %}

{% block contenido %}
	
	<div id="fitro-busqueda-minuta">
		<h1>{{title}}<span> {% if fecha_minuta is defined %} {{fecha_minuta}} {% endif %}</span></h1>
	</div>

	{% if MinutaDetalle is defined %}
		{{ include('minuta/minutas/detail-minuta.html.twig') }}
	{% else %}

		<div id="form-minuta">

			<!-- MINUTA -->
			<h2>Minuta</h2>
			{{ form_start(form, {'attr': {'class': 'form-control'}}) }}

				<div class="row">
					<div class="col-md-6">
						<p>Objetivo</p>
						{{ form_widget(form.objetivo) }}
					</div>

					<div class="col-md-3">
						<p>autorizaci√≥n</p>
						{{ form_widget(form.autorizacion) }}
					</div>

					<div class="col-md-3">
						<p>Estatus</p>
						{{ form_widget(form.estatus) }}
					</div>

					<div class="col-md-2"> 
						<p>fecha inicio</p>
						{{ form_widget(form.fecha_inicio_1) }}
					</div>

					<div class="col-md-2"> 
						<p>nueva fecha inicio</p>
						{{ form_widget(form.fecha_inicio_2) }}
					</div>

					<div class="col-md-2"> 
						<p>fecha fin</p>
						{{ form_widget(form.fecha_fin_1) }}
					</div>

					<div class="col-md-2"> 
						<p>nueva fecha fin</p>
						{{ form_widget(form.fecha_fin_2) }}
					</div>

					<div class="col-md-2"> 
						<p>proxima reunion</p>
						{{ form_widget(form.proxima_reunion_1) }}
					</div>

					<div class="col-md-2"> 
						<p>nueva proxima reunion</p>
						{{ form_widget(form.proxima_reunion_2) }}
					</div>

					<div class="col-md-8">
						<p>Itinerario</p>
						{{ form_widget(form.itinerario) }}
					</div>

					<div class="col-md-4">
						<p>asistentes</p>
						{{ form_widget(form.audiencia) }}
					</div>

				</div>

				<hr>

				<div class="row">
					<div class="col-md-9">
					</div>

					<div class="col-md-3">
						{{ form_widget(form.submit) }}
					</div>
				</div>
			
			{{ form_end(form) }}

			<!-- TEMAS -->
			<h2>Temas de minuta</h2>
			<div class="row">
				<div class="col-md-12">
					{% if TemasMinutas is defined %}
						{{ include('minuta/temas/detail-tema.html.twig') }}
					{% endif %}
				</div>
			</div>

			{{ form_start(form_tema, {'attr': {'class': 'form-control'}}) }}

				<div class="row">
					<div class="col-md-3">
						<p>titulo</p>
						{{ form_widget(form_tema.titulo) }}
					</div>
				</div>

				<hr>

				<div class="row">
					<div class="col-md-9">
					</div>
					<div class="col-md-3">
						{{ form_widget(form_tema.submit) }}
					</div>
				</div>

			{{ form_end(form_tema) }}

			<!-- -->

		</div>

		<br>
