{% extends 'layout/layoutBase.html.twig' %}

{% block tituloPagina %} 
	{{title}}
{% endblock %}

{% block contenido %}

	<div id="fitro-busqueda-minuta">
		<h1>{{title}}<span> {% if fecha_minuta is defined %} {{fecha_minuta}} {% endif %}</span></h1>
		<ol>
			<li>
				{{ form_start(form) }}
				{{ form_widget(form) }}
				{{ form_end(form) }}
			</li>	
		</ol>
	</div>

	<hr class="hr-red">

	{% if MinutaDetalle is defined %}
		{{ include('minuta/minutas/detail-minuta.html.twig') }}
	{% else %}
		{{ include('minuta/minutas/all-minutas.html.twig') }}
	{% endif %}

{% endblock %}