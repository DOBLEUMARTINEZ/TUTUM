{% extends 'layout/layoutBase.html.twig' %}

{% block tituloPagina %} 
	{{title}}
{% endblock %}


{% block contenido %}
	<div id="fitro-busqueda-minuta">
		<h1>{{title}}</h1>
	</div>
	<br><br>

	{% for usuario in Usuarios %}
		{% if usuario.rol != 'SUPER_ADMIN' %}

			<h2>{{  usuario.nombre }} {{  usuario.apellido }}</h2>
			<hr class="hr-red">

			<div id="data-table-v1">

				<table>

				  	<tr>
				    	<th width="3%">ID</th>
						<th>Tema</th>
						<th>Usuario</th>
						<th width="3%"><i class="fas fa-cogs"></i></th>
				  	</tr>

				  	{% for temaUsuario in TemasUsuarios %}
				  		{% if temaUsuario.idusuario == usuario.id %}
							<tr>
								<td><center>{{ temaUsuario.id }}</center></td>
								<td>{{ temaUsuario.idtema }}</td>
								<td>
									
								</td>
								<td>
									<center><i class="fas fa-user-cog" alt="Ajustes de Minuta" title="Ajustes de Minuta" ></i></center>
								</td>
							</tr>
						{% endif %}
					{% endfor %}

				</table>

			</div>

		{% endif %}
	{% endfor %}

	<h2>{{title}}</h2>
	<hr class="hr-red">
	

{% endblock %}