{% extends 'layout/layoutBase.html.twig' %}

{% block tituloPagina %} 
	{{title}}
{% endblock %}

{% block contenido %}
	
	<div id="fitro-busqueda-minuta">
		<h1>{{title}}</h1>
	</div>

	<hr class="hr-red">

	<div id="data-table-v1">
		<table>
			<tr>
				<th width="10%">ID</th>
				<th width="30%">Usuario</th>
				<th width="30%">Email</th>
				<th width="30%">Fecha ingreso</th>
			</tr>

			{% for huella in Huellas %}

				{% if huella.usuario.rol.idRoles > 1 %}

					<tr>
						<td style="text-align: center;">{{ huella.id }}</td>
						<td >{{ huella.usuario.nombre }} {{ huella.usuario.apellido }}</td>
						<td >{{ huella.usuario.email }}</td>
						<td style="text-align: center;">{{ huella.fecha|date('d-m-Y H:i:s') }}</td>
					</tr>

				{% endif %}

			{% endfor %}
				
		</table>
			
	</div>

{% endblock %}




